{
  "name": "koa-react",
  "version": "1.0.0",
  "author": "James Olson",
  "license": "MIT",
  "description": "Koa React",
  "homepage": ".",
  "bugs": {
    "url": "https://github.com/sixfootsixdesigns/koa-react/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sixfootsixdesigns/koa-react.git"
  },
  "scripts": {
    "build": "yarn build:client; yarn build:server",
    "build:client": "react-scripts build",
    "build:server": "tsc --project tsconfig.server.json",
    "dev:client": "react-scripts start",
    "dev:server": "nodemon src/server/index.ts",
    "format": "prettier --write \"src/**/*.{ts,tsx,scss,js}\"",
    "format:check": "prettier --list-different \"src/**/*.{ts,tsx,scss,json,js}\"",
    "heroku-postbuild": "yarn build",
    "lint": "tslint --project .",
    "start": "node build/index.js",
    "test": "yarn test:client; yarn test:server",
    "test:client": "jest --config jest.config.client.js",
    "test:client:ci": "yarn test:client --maxWorkers=2",
    "test:client:watch": "yarn test:client --watch",
    "test:server": "jest --config jest.config.server.js",
    "test:server:ci": "yarn test:server --maxWorkers=2",
    "test:server:watch": "yarn test:server --watch"
  },
  "proxy": "http://localhost:3333/",
  "engines": {
    "node": "^10.11",
    "yarn": "^1.3.2"
  },
  "dependencies": {
    "@koa/cors": "^2.2.3",
    "@reach/router": "1.2.1",
    "dotenv": "^6.2.0",
    "jsonwebtoken": "^8.5.0",
    "koa": "^2.7.0",
    "koa-404-handler": "^0.0.2",
    "koa-better-error-handler": "^1.3.6",
    "koa-body": "^4.0.8",
    "koa-compress": "^3.0.0",
    "koa-helmet": "^4.0.0",
    "koa-jwt": "^3.5.1",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-scripts": "^2.1.5",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.0",
    "@types/jest": "^23.0.0",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/koa": "^2.0.48",
    "@types/koa-compress": "^2.0.8",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-router": "^7.0.40",
    "@types/koa-static": "^4.0.0",
    "@types/koa__cors": "^2.2.3",
    "@types/node": "^10.12.19",
    "@types/reach__router": "1.2.3",
    "@types/react": "^16.8.6",
    "@types/react-dom": "^16.8.2",
    "@types/supertest": "^2.0.7",
    "jest": "^23.6.0",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "react-testing-library": "^5.9.0",
    "supertest": "^4.0.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^8.0.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.3"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
